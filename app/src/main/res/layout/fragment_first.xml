<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="420dp"
            android:layout_height="850dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/explorerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Marsinio"
            android:textColor="#F9AD1A"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/letsexploretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="149dp"
            android:layout_marginBottom="501dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:gravity="top"
            android:text="@string/letsexplore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/explorerText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.486" />

        <ImageView
            android:id="@+id/astronomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="324dp"
            android:layout_marginBottom="143dp"
            android:src="@drawable/astronomer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/LetsGoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/rectangle_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/astronomer" />

        <TextView
            android:id="@+id/letsgo"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:gravity="top"
            android:text="Let's Go"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/LetsGoButton"
            app:layout_constraintEnd_toEndOf="@+id/LetsGoButton"
            app:layout_constraintStart_toStartOf="@+id/LetsGoButton"
            app:layout_constraintTop_toTopOf="@+id/LetsGoButton" />

        <ImageView
            android:id="@+id/rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/rocket"
            app:layout_constraintBottom_toBottomOf="@+id/LetsGoButton"
            app:layout_constraintStart_toEndOf="@+id/letsgo"
            app:layout_constraintTop_toTopOf="@+id/LetsGoButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>